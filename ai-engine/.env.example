# PolyFlow AI Engine Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info
LOG_DIR=./logs

# AI Provider Configuration
PRIMARY_AI_PROVIDER=anthropic
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
MAX_TOKENS=8000
TEMPERATURE=0.3
TOP_P=0.9
FREQUENCY_PENALTY=0.1
PRESENCE_PENALTY=0.1

# Pinecone Vector Database Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=polyflow-knowledge
PINECONE_PODS=1
PINECONE_REPLICAS=1
PINECONE_POD_TYPE=p1.x1

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# PostgreSQL Database Configuration (for metrics storage)
DATABASE_URL=postgresql://username:password@localhost:5432/polyflow_ai

# Rate Limiting Configuration
ENABLE_RATE_LIMITING=true
GLOBAL_RATE_LIMIT=1000
CODE_GEN_RATE_LIMIT=20
CODE_ANALYSIS_RATE_LIMIT=30
AI_SERVICE_RATE_LIMIT=10

# Internal Service Configuration
INTERNAL_SERVICE_KEY=your_internal_service_key_here

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_LEARNING_SYSTEM=true
ENABLE_AB_TESTING=true
ENABLE_METRICS_COLLECTION=true
ENABLE_FEEDBACK_COLLECTION=true
ENABLE_PATTERN_RECOGNITION=true

# External Services
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_API_KEY=your_analytics_api_key_here

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=.rs,.ts,.js,.py,.json,.toml,.yaml,.yml

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=300000
KEEP_ALIVE_TIMEOUT=5000

# Development Configuration
ENABLE_DEBUG_LOGS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_REQUEST_LOGGING=true

# Production Configuration
ENABLE_CLUSTERING=true
CLUSTER_WORKERS=0
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# Backup and Recovery
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# Notification Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
ALERT_EMAIL=alerts@polyflow.ai

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs
SWAGGER_UI_ENABLED=true